<!--  
dtd地址必须为绝对路径,默认通过classloader寻找相对地址,若需要通过自定义路径寻找DTD文件,需要重新
设置Reader的EntityResolver.
-->
<!DOCTYPE framework-config SYSTEM "%PROJECT_HOME%/standard/framework-configuration.dtd">
 
<framework-config>
   <user-config name = "decaywood">
        <database-info name="driver">com.mysql.jdbc.Driver</database-info>
        <database-info name="url">jdbc:mysql://localhost:3306/hibernate_first</database-info>
        <database-info name="username">root</database-info>
        <database-info name="password"></database-info>
        <database-info name="dialect">org.hibernate.dialect.MySQLDialect</database-info>
        <!-- 
        <property name="hibernate.format_sql">true</property>
         -->
        <relate pojo-xml-path="User.relate.xml"/>
    </user-config>
</framework-config>






